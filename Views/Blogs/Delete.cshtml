@model GallifreyPlanet.ViewModels.Blog.BlogManagerViewModel

@{
    ViewData["Title"] = "Xóa bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="alert alert-danger" role="alert">
        Bạn có chắc chắn muốn xóa bài viết này?
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <h3 class="card-title">@Model.BlogViewModel!.Title</h3>
            <p class="card-text">@Model.BlogViewModel!.Description</p>
            <img src="@Model.BlogViewModel!.CurrentThumbnailPath" class="img-fluid mb-3" alt="@Model.BlogViewModel!.Title">
            <dl class="row">
                <dt class="col-sm-2">Tác giả:</dt>
                <dd class="col-sm-10">@Model.User!.Name</dd>
                <dt class="col-sm-2">Ngày đăng:</dt>
                <dd class="col-sm-10">@Model.BlogViewModel!.CreatedAt</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.BlogViewModel.Id" />
        <input type="submit" value="Xóa bài viết" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>
