@model GallifreyPlanet.ViewModels.Account.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<section class="h-100">
	<div class="container h-100">
		<div class="row justify-content-sm-center h-100">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
				<div class="text-center my-5">
					<img src="https://getbootstrap.com/docs/5.0/assets/brand/bootstrap-logo.svg" alt="logo" width="100">
				</div>
				<div class="card shadow-sm">
					<div class="card-body p-5">
						<h1 class="fs-4 card-title fw-bold mb-4">Quên mật khẩu</h1>
						<form asp-action="ForgotPassword" method="POST" class="needs-validation" novalidate="">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="mb-3">
								<label asp-for="Email" class="mb-2 text-muted"></label>
								<input asp-for="Email" type="text" class="form-control" required autofocus>
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>

							<div class="d-flex align-items-center">
								<button type="submit" class="btn btn-primary ms-auto">
									Gửi
								</button>
							</div>
						</form>
					</div>
					<div class="card-footer py-3 border-0">
						<div class="text-center">
							<a class="text-dark" asp-area="" asp-controller="Account" asp-action="Login">Về trang đăng nhập</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
