 @using GallifreyPlanet.ViewModels.Account
    @model ExternalLoginConfirmationViewModel

<div class="login-container">
    <h1 class="form-title">Chào mừng đến <br /> Gallifrey Planet!</h1>

    <form 
        asp-controller="Account" 
        asp-action="ExternalLoginConfirmation"
        asp-route-returnurl="@ViewData["ReturnUrl"]"
        method="post"
        class="bg-body p-4 rounded-3"
        autocomplete="off"
    >
        <input type="hidden" asp-for="Email" />

        <div class="provider-info">
            <p class="m-0">
                Bạn đã kết nối thành công với <strong>@ViewData["ProviderDisplayName"]</strong>.
                Hãy hoàn thiện thông tin bên dưới.
            </p>
        </div>

        <div asp-validation-summary="All" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" disabled />
            <span asp-validation-for="Email" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <small class="form-text text-muted">Mật khẩu ít nhất 8 ký tự, bao gồm chữ hoa, thường và ký tự đặc biệt</small>
            <span asp-validation-for="Password" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="form-label"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
        </div>

        <div class="form-check mb-4">
            <input type="checkbox" class="form-check-input" id="terms" required>
            <label class="form-check-label small text-muted" for="terms">
                Tôi đồng ý với các <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">điều khoản</a> của website
            </label>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-3">
            Đăng ký tài khoản
        </button>
    </form>
</div>

<style>
    .login-container {
        max-width: 500px;
        margin: 0 auto;
        border-radius: 20px;
    }

    .form-title {
        color: #2563eb;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        text-align: center;
        font-weight: 600;
    }

    .provider-info {
        background-color: #f0f9ff;
        padding: 1rem;
        border-radius: 12px;
        margin-bottom: 2rem;
        border-left: 4px solid #3b82f6;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #4b5563;
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .form-control:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: none;
    }

    .validation-message {
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .validation-summary {
        background-color: #fee2e2;
        border-left: 4px solid #dc2626;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}