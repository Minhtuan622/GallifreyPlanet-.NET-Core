@model IEnumerable<GallifreyPlanet.Models.Friend>

<div class="container py-5">
    <!-- Pending Friend Requests Section -->
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fa-solid fa-envelope-open-text"></i>
                    Friend Requests
                    <span class="badge bg-primary ms-2">3</span>
                </h5>
                <button 
                    class="btn btn-link text-decoration-none p-0" 
                    type="button"
                    data-bs-toggle="collapse" 
                    data-bs-target="#friendRequestsCollapse"
                >
                    <i class="fa-solid fa-chevron-down"></i>
                </button>
            </div>
        </div>
        <div class="collapse show" id="friendRequestsCollapse">
            <div class="card-body p-0">
                <!-- Friend Request Item -->
                <div class="list-group list-group-flush">
                    @* Thay thế bằng vòng lặp thực tế qua friend requests *@
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="list-group-item">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light d-flex justify-content-center align-items-center me-3"
                                         style="width: 48px; height: 48px;">
                                        <i class="fa-regular fa-user fs-4 text-secondary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">John Doe</h6>
                                        <small class="text-muted">
                                            <i class="fa-solid fa-clock"></i>
                                            Sent 2 days ago
                                        </small>
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary btn-sm">
                                        <i class="fa-solid fa-check"></i>
                                        Accept
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm">
                                        <i class="fa-solid fa-xmark"></i>
                                        Decline
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Friends List Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">
            Danh sách bạn bè
            <span class="badge bg-secondary ms-2">@(Model?.Count() ?? 0)</span>
        </h2>
    </div>

    @if (Model is not null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle bg-light d-flex justify-content-center align-items-center"
                                     style="width: 48px; height: 48px;">
                                    <i class="fa-regular fa-user fs-4 text-secondary"></i>
                                </div>
                                <div class="ms-3">
                                    <h5 class="card-title mb-1">Friend #@item.FriendId</h5>
                                    <p class="card-subtitle text-muted small">
                                        <i class="fa-solid fa-clock"></i>
                                        Added @item.CreatedAt
                                    </p>
                                </div>
                            </div>

                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button"
                                        data-bs-toggle="dropdown">
                                    Actions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="fa-regular fa-eye"></i>
                                            View Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-pencil"></i>
                                            Edit
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="fa-regular fa-trash-can"></i>
                                            Remove Friend
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="display-1 text-secondary mb-4">
                <i class="bi bi-people"></i>
            </div>
            <h3>Chưa có bạn bè</h3>
            <p class="text-muted mb-4">Kết nối với mọi người bằng cách thêm những người bạn đầu tiên</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
                Tìm kiếm bạn mới
            </a>
        </div>
    }
</div>

<style>
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .gap-2 {
        gap: 0.5rem !important;
    }

    .list-group-item {
        padding: 1rem;
    }

    .list-group-item:last-child {
        border-bottom: 0;
    }
</style>