@model IEnumerable<GallifreyPlanet.Models.Friend>
@* Giả sử bạn có thêm một model cho friend requests *@
@* @model (IEnumerable<GallifreyPlanet.Models.Friend>, IEnumerable<GallifreyPlanet.Models.FriendRequest>) *@

<div class="container py-5">
    <!-- Pending Friend Requests Section -->
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-envelope-paper-heart me-2"></i>Friend Requests
                    <span class="badge bg-primary ms-2">3</span>
                </h5>
                <button class="btn btn-link text-decoration-none p-0" type="button"
                        data-bs-toggle="collapse" data-bs-target="#friendRequestsCollapse">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>
        <div class="collapse show" id="friendRequestsCollapse">
            <div class="card-body p-0">
                <!-- Friend Request Item -->
                <div class="list-group list-group-flush">
                    @* Thay thế bằng vòng lặp thực tế qua friend requests *@
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="list-group-item">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light d-flex justify-content-center align-items-center me-3"
                                         style="width: 48px; height: 48px;">
                                        <i class="bi bi-person fs-4 text-secondary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">John Doe</h6>
                                        <small class="text-muted">
                                            <i class="bi bi-clock me-1"></i>Sent 2 days ago
                                        </small>
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-primary btn-sm">
                                        <i class="bi bi-check2 me-1"></i>Accept
                                    </button>
                                    <button class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-x-lg me-1"></i>Decline
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Friends List Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">
            My Friends
            <span class="badge bg-secondary ms-2">@(Model?.Count() ?? 0)</span>
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Add New Friend
        </a>
    </div>

    @if (Model is not null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="rounded-circle bg-light d-flex justify-content-center align-items-center"
                                     style="width: 48px; height: 48px;">
                                    <i class="bi bi-person fs-4 text-secondary"></i>
                                </div>
                                <div class="ms-3">
                                    <h5 class="card-title mb-1">Friend #@item.FriendId</h5>
                                    <p class="card-subtitle text-muted small">
                                        <i class="bi bi-clock me-1"></i>
                                        Added @item.CreatedAt
                                    </p>
                                </div>
                            </div>

                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button"
                                        data-bs-toggle="dropdown">
                                    Actions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="bi bi-eye me-2"></i>View Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="bi bi-pencil me-2"></i>Edit
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                            <i class="bi bi-trash me-2"></i>Remove Friend
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="display-1 text-secondary mb-4">
                <i class="bi bi-people"></i>
            </div>
            <h3>No Friends Yet</h3>
            <p class="text-muted mb-4">Start connecting with others by adding your first friend!</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add Friend
            </a>
        </div>
    }
</div>

<!-- Optional: Custom CSS -->
<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .gap-2 {
        gap: 0.5rem !important;
    }

    .list-group-item {
        padding: 1rem;
    }

        .list-group-item:last-child {
            border-bottom: 0;
        }
</style>