@{
    ViewData["Title"] = "Bạn bè";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string defaultAvatarPath = "/uploads/accounts/default-avatar.jpg";
}

<div class="container py-5 px-0">
    <!-- Pending Friend Requests Section -->
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fa-solid fa-envelope-open-text"></i>
                    Friend Requests
                    @* <span class="badge bg-primary ms-2">3</span> *@
                </h5>
                <button 
                    class="btn btn-link text-decoration-none p-0" 
                    type="button"
                    data-bs-toggle="collapse" 
                    data-bs-target="#friendRequestsCollapse"
                >
                    <i class="fa-solid fa-chevron-down"></i>
                </button>
            </div>
        </div>
        <div class="collapse show" id="friendRequestsCollapse">
            <div class="card-body p-0">
                <!-- Friend Request Item -->
                <div class="list-group list-group-flush">
                    @if (Model.FriendRequests is not null)
                    {
                        @foreach (var friendRequest in Model.FriendRequests)
                        {
                            <div class="list-group-item">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <img src="@(friendRequest.Friend.Avatar ?? defaultAvatarPath)" style="width: 48px; height: 48px;" class="rounded-circle" />
                                        <div class="ms-3">
                                            <h6 class="mb-0">@friendRequest.Friend.Name</h6>
                                            <small class="text-muted">
                                                <i class="fa-solid fa-clock"></i>
                                                @friendRequest.CreatedAt
                                            </small>
                                        </div>
                                    </div>

                                    @if (friendRequest.Friend.UserName == User.Identity!.Name)
                                    {
                                        <div class="d-flex gap-2">
                                            <form 
                                                asp-action="Accept"
                                                asp-controller="Friend"
                                                asp-route-friendId="@friendRequest.User.Id"
                                                method="post"
                                            >
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-check"></i>
                                                    Chấp nhận
                                                </button>
                                            </form>
                                            <form 
                                                asp-action="Decline"
                                                asp-controller="Friend"
                                                asp-route-friendId="@friendRequest.User.Id"
                                                method="post"
                                            >
                                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                                    <i class="fa-solid fa-xmark"></i>
                                                    Từ chối
                                                </button>
                                            </form>
                                        </div>
                                    } else
                                    {
                                        <div class="d-flex gap-2">
                                            <p>Đã gửi lời mời kết bạn</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Friends Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">
            Danh sách bạn bè
            @* <span class="badge bg-secondary ms-2">3</span> *@
        </h2>
    </div>

    @if (Model.Friends is not null)
    {
        <div class="row g-4">
            @foreach (var item in Model.Friends)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@(item.Friend.Avatar ?? defaultAvatarPath)" style="width: 48px; height: 48px;" class="rounded-circle" />
                                <div class="ms-3">
                                    <a 
                                       class="text-decoration-none"
                                       asp-action="Index"
                                       asp-controller="PublicProfile"
                                       asp-route-username="@item.Friend.UserName"
                                    >
                                        <h5 class="card-title mb-1">@item.Friend.Name</h5>
                                        <p class="card-subtitle text-muted small">
                                            @item.Friend.Email
                                        </p>
                                    </a>
                                </div>
                            </div>

                            <div class="dropdown">
                                <button 
                                    class="btn btn-outline-secondary dropdown-toggle w-100" 
                                    type="button"
                                    data-bs-toggle="dropdown"
                                >
                                    Actions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a 
                                            class="dropdown-item" 
                                            asp-action="Index" 
                                            asp-controller="PublicProfile"
                                            asp-route-username="@item.Friend.UserName"
                                        >
                                            <i class="fa-regular fa-eye"></i>
                                            View Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form 
                                            asp-action="Remove"
                                            asp-controller="Friend"
                                            asp-route-friendId="@item.Friend.Id"
                                            method="post"
                                        >
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fa-regular fa-trash-can"></i>
                                                Remove Friend
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="display-1 text-secondary mb-4">
                <i class="bi bi-people"></i>
            </div>
            <h3>Chưa có bạn bè</h3>
            <p class="text-muted mb-4">Kết nối với mọi người bằng cách thêm những người bạn đầu tiên</p>
            <a class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>
                Tìm kiếm bạn mới
            </a>
        </div>
    }

    <!-- Blocked Friends Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0">
            Đã chặn
            @* <span class="badge bg-secondary ms-2">3</span> *@
        </h2>
    </div>

    @if (Model.BlockedFriends is not null)
    {
        <div class="row g-4">
            @foreach (var item in Model.BlockedFriends)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@(item.Friend.Avatar ?? defaultAvatarPath)" style="width: 48px; height: 48px;" class="rounded-circle" />
                                <div class="ms-3">
                                    <a 
                                       class="text-decoration-none"
                                       asp-action="Index"
                                       asp-controller="PublicProfile"
                                       asp-route-username="@item.Friend.UserName"
                                    >
                                        <h5 class="card-title mb-1">@item.Friend.Name</h5>
                                        <p class="card-subtitle text-muted small">
                                            @item.Friend.Email
                                        </p>
                                    </a>
                                </div>
                            </div>

                            <div class="dropdown">
                                <button 
                                    class="btn btn-outline-secondary dropdown-toggle w-100" 
                                    type="button"
                                    data-bs-toggle="dropdown"
                                >
                                    Actions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a 
                                            class="dropdown-item"
                                            asp-action="UnBlocked"
                                            asp-controller="Friend"
                                            asp-route-friendId="@item.Friend.Id"
                                        >
                                            <i class="fa-regular fa-eye"></i>
                                            Bỏ chặn
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form 
                                            asp-action="Remove"
                                            asp-controller="Friend"
                                            asp-route-friendId="@item.Friend.Id"
                                            method="post"
                                        >
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fa-regular fa-trash-can"></i>
                                                Remove Friend
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="display-1 text-secondary mb-4">
                <i class="bi bi-people"></i>
            </div>
            <h3>Chưa có bạn bè bị chặn</h3>
            <p class="text-muted mb-4">Hủy kết nối với mọi người bằng cách chặn những người bạn đầu tiên :v</p>
        </div>
    }
</div>

<style>
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .gap-2 {
        gap: 0.5rem !important;
    }

    .list-group-item {
        padding: 1rem;
    }

    .list-group-item:last-child {
        border-bottom: 0;
    }
</style>