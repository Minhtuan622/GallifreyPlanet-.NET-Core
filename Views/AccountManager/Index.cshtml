@using Microsoft.AspNetCore.Identity
@model GallifreyPlanet.ViewModels.AccountManager.AccountManagerViewModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/AccountManager/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Thông tin tài khoản</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.User!.Avatar))
                    {
                        <img src="@Model.User!.Avatar" alt="Avatar" id="avatar" class="rounded-circle img-fluid" style="width: 150px;" />
                    }
                    else
                    {
                        <img src="/images/default-avatar.png" alt="Default Avatar" id="avatar" class="rounded-circle img-fluid" style="width: 150px;" />
                    }
                    <h5 class="my-3">@Model.User!.Name</h5>
                    <p class="text-muted mb-1">@Model.User!.UserName</p>
                    <p class="text-muted mb-4">@Model.User!.Address</p>
                    <div class="d-flex justify-content-center mb-2">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#avatarModal">
                            Thay đổi ảnh đại diện
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Tên</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.User!.Name</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Tên đăng nhập</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.User!.UserName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.User!.Email</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Địa chỉ</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.User!.Address</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Xác thực hai yếu tố (2FA)</p>
                        </div>
                        <div class="col-sm-9">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <p class="text-success mb-0">Đã bật</p>
                            }
                            else
                            {
                                <a asp-action="EnableTwoFactorAuthentication" class="btn btn-primary btn-sm">Bật xác thực hai yếu tố</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model.LoginHistory!.Count > 0)
        {
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">Lịch sử đăng nhập</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Thời gian</th>
                                        <th>IP</th>
                                        <th>Thiết bị</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var login in Model.LoginHistory)
                                    {
                                        <tr>
                                            <td>@login.LoginTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            <td>@login.IpAddress</td>
                                            <td>@login.UserAgent</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if(Model.ActiveSessions!.Count > 0)
        {
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">Quản lý phiên đăng nhập</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Thiết bị</th>
                                        <th>Địa điểm</th>
                                        <th>Thời gian đăng nhập</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in Model.ActiveSessions)
                                    {
                                        <tr>
                                            <td>@session.DeviceName</td>
                                            <td>@session.Location</td>
                                            <td>@session.LoginTime</td>
                                            <td>
                                                <form asp-action="TerminateSession" method="post">
                                                    <input type="hidden" name="sessionId" value="@session.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Đăng xuất</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Liên kết tài khoản mạng xã hội</h3>
                </div>
                <div class="card-body">
                    @if (Model.LinkedAccounts.Contains("Google"))
                    {
                        <button class="btn btn-outline-danger mb-2" asp-action="UnlinkAccount" asp-route-provider="Google">Hủy liên kết Google</button>
                    }
                    else
                    {
                        <button class="btn btn-outline-primary mb-2" asp-action="LinkAccount" asp-route-provider="Google">Liên kết với Google</button>
                    }

                    @if (Model.LinkedAccounts.Contains("Facebook"))
                    {
                        <button class="btn btn-outline-danger mb-2" asp-action="UnlinkAccount" asp-route-provider="Facebook">Hủy liên kết Facebook</button>
                    }
                    else
                    {
                        <button class="btn btn-outline-primary mb-2" asp-action="LinkAccount" asp-route-provider="Facebook">Liên kết với Facebook</button>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Xóa tài khoản</h3>
                </div>
                <div class="card-body">
                    <p class="text-danger">Cảnh báo: Hành động này không thể hoàn tác.</p>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                        Xóa tài khoản
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for deleting account -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAccountModalLabel">Xác nhận xóa tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa tài khoản? Hành động này không thể hoàn tác.</p>
                <form asp-action="DeleteAccount" method="post">
                    <div class="mb-3">
                        <label for="password" class="form-label">Nhập mật khẩu để xác nhận:</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <button type="submit" class="btn btn-danger">Xóa tài khoản</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal for avatar upload and crop -->
<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="avatarModalLabel">Thay đổi ảnh đại diện</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="file" id="avatarInput" accept="image/*" class="form-control mb-3">
                <div id="avatarCropper" style="max-width: 100%; max-height: 300px;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="saveAvatar">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropper/4.1.0/cropper.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropper/4.1.0/cropper.min.js"></script>
    <script src="~/js/account_manager.js"></script>
}
