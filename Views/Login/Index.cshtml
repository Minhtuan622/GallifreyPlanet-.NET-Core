
@{
    ViewData["Title"] = "Login account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="h-100">
	<div class="container h-100">
		<div class="row justify-content-sm-center h-100">
			<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
				<div class="text-center my-5">
					<img src="https://getbootstrap.com/docs/5.0/assets/brand/bootstrap-logo.svg" alt="logo" width="100">
				</div>
				<div class="card shadow-sm">
					<div class="card-body p-5">
						<h1 class="fs-4 card-title fw-bold mb-4">Đăng nhập</h1>
						<form method="POST" class="needs-validation" novalidate="" autocomplete="off">
							<div class="mb-3">
								<label class="mb-2 text-muted" for="email">Email</label>
								<input id="email" type="email" class="form-control" name="email" required autofocus>
								<div class="invalid-feedback">
									Email là bắt buôc
								</div>
							</div>

							<div class="mb-3">
								<div class="mb-2 w-100">
									<label class="text-muted" for="password">Mật khẩu</label>
									<a class="float-end" asp-area="" asp-controller="ForgotPassword" asp-action="Index">Quên mật khẩu?</a>
								</div>
								<input id="password" type="password" class="form-control" name="password" required>
								<div class="invalid-feedback">
									Mật khẩu là bắt buộc
								</div>
							</div>

							<div class="d-flex align-items-center">
								<div class="form-check">
									<input type="checkbox" name="remember" id="remember" class="form-check-input">
									<label for="remember" class="form-check-label">Duy trì đăng nhâp</label>
								</div>
								<button type="submit" class="btn btn-primary ms-auto">
									Đăng nhập
								</button>
							</div>
						</form>
					</div>
					<div class="card-footer py-3 border-0">
						<div class="text-center">
							Chưa có tài khoản?
							<a class="text-dark" asp-area="" asp-controller="Signup" asp-action="Index">Đăng ký ngay</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script src="~/js/validate_form.js" asp-append-version="true"></script>
