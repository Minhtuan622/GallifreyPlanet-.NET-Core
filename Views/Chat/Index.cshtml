@{
    ViewBag.Title = "Chat Manager";
}

<div class="container-fluid p-0">
    <div class="row g-0 vh-75">
        <!-- Sidebar -->
        <div class="col-md-4 col-lg-3 border-end">
            <div class="d-flex flex-column h-100">
                <!-- Search Header -->
                <div class="p-3 border-bottom">
                    <h5 class="mb-3">Messages</h5>
                    <div class="input-group">
                        <span class="input-group-text border-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" id="search-conversations" class="form-control border-0" placeholder="Search conversations...">
                    </div>
                </div>

                <!-- Conversation List -->
                <div class="flex-grow-1 overflow-auto vh-70">
                    <div class="conversation-item d-flex p-3 border-bottom hover-bg" data-user-id="1">
                        <div class="position-relative">
                            <img src="/api/placeholder/40/40" class="rounded-circle" width="48" height="48" alt="User">
                            <span class="position-absolute bottom-0 end-0 bg-success border border-light rounded-circle status-dot"></span>
                        </div>
                        <div class="ms-3 overflow-hidden flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">John Doe</h6>
                                <small class="text-muted">2m ago</small>
                            </div>
                            <p class="text-muted small text-truncate mb-0">Thanks for the update!</p>
                        </div>
                    </div>

                    <div class="conversation-item d-flex p-3 border-bottom hover-bg" data-user-id="2">
                        <div class="position-relative">
                            <img src="/api/placeholder/40/40" class="rounded-circle" width="48" height="48" alt="User">
                            <span class="position-absolute bottom-0 end-0 bg-secondary border border-light rounded-circle status-dot"></span>
                        </div>
                        <div class="ms-3 overflow-hidden flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Alice Smith</h6>
                                <small class="text-muted">1h ago</small>
                            </div>
                            <p class="text-muted small text-truncate mb-0">Let's meet tomorrow</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chat Area -->
        <div class="col-md-8 col-lg-9 d-flex flex-column">
            <!-- Chat Header -->
            <div class="p-3 border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="position-relative">
                            <img src="/api/placeholder/40/40" class="rounded-circle" width="48" height="48" alt="User">
                            <span class="position-absolute bottom-0 end-0 bg-success border border-light rounded-circle status-dot"></span>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">John Doe</h6>
                            <small class="text-success">Online</small>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn rounded-circle" title="Voice Call">
                            <i class="fas fa-phone"></i>
                        </button>
                        <button class="btn rounded-circle" title="Video Call">
                            <i class="fas fa-video"></i>
                        </button>
                        <button class="btn rounded-circle" title="More Options">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            <div class="flex-grow-1 overflow-auto vh-70 p-3" id="chat-messages">
                <div class="message-received mb-3">
                    <div class="d-flex">
                        <div class="message-content bg-body rounded-3 p-3 shadow-sm">
                            Hi! How are you doing?
                        </div>
                    </div>
                    <small class="text-muted ms-2">10:30 AM</small>
                </div>

                <div class="message-sent mb-3">
                    <div class="d-flex justify-content-end">
                        <div class="message-content bg-primary text-white rounded-3 p-3 shadow-sm">
                            I'm doing great, thanks for asking! How about you?
                        </div>
                    </div>
                    <div class="text-end">
                        <small class="text-muted me-2">10:32 AM</small>
                    </div>
                </div>
            </div>

            <!-- Input Area -->
            <div class="p-3 border-top">
                <div class="d-flex gap-2 align-items-center">
                    <button class="btn rounded-circle" title="Attach File">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <input type="text" id="message-input" class="form-control rounded-pill border-0" placeholder="Type your message...">
                    <button class="btn rounded-circle" title="Emoji">
                        <i class="fas fa-smile"></i>
                    </button>
                    <button class="btn btn-primary rounded-circle" id="send-message" title="Send Message">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="css/chat.css">
}

@section Scripts {
    <script>
        $(document).ready(function () {
            const $chatMessages = $('#chat-messages');
            const $messageInput = $('#message-input');
            const $searchInput = $('#search-conversations');

            // Scroll to bottom on load
            function scrollToBottom() {
                $chatMessages.scrollTop($chatMessages[0].scrollHeight);
            }
            scrollToBottom();

            // Handle search with debounce
            let searchTimeout;
            $searchInput.on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    const searchValue = $(this).val().toLowerCase();
                    $('.conversation-item').each(function() {
                        const text = $(this).find('h6').text().toLowerCase() +
                            $(this).find('p').text().toLowerCase();
                        $(this).toggle(text.includes(searchValue));
                    });
                }, 300);
            });

            // Handle conversation selection
            $('.conversation-item').click(function() {
                $('.conversation-item').removeClass('active bg-light');
                $(this).addClass('active bg-light');

                if (window.innerWidth < 768) {
                    $('.chat-sidebar').removeClass('show');
                }
            });

            // Send message function
            function sendMessage() {
                const message = $messageInput.val().trim();
                if (message) {
                    const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                    const messageHtml = `
                        <div class="message-sent mb-3">
                            <div class="d-flex justify-content-end">
                                <div class="message-content bg-primary text-white rounded-3 p-3 shadow-sm">
                                    ${escapeHtml(message)}
                                </div>
                            </div>
                            <div class="text-end">
                                <small class="text-muted me-2">${time}</small>
                            </div>
                        </div>
                    `;
                    $chatMessages.append(messageHtml);
                    $messageInput.val('').focus();
                    scrollToBottom();
                }
            }

            // Escape HTML to prevent XSS
            function escapeHtml(text) {
                return text
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/"/g, "&quot;")
                    .replace(/'/g, "&#039;");
            }

            // Send message events
            $('#send-message').click(sendMessage);
            $messageInput.keypress(function(e) {
                if (e.which === 13) {
                    sendMessage();
                    e.preventDefault();
                }
            });

            // Mobile responsive handlers
            function toggleSidebar() {
                $('.chat-sidebar').toggleClass('show');
            }

            // Add back button for mobile
            if (window.innerWidth < 768) {
                $('.chat-header').prepend(`
                    <button class="btn btn-light me-2 d-md-none" onclick="toggleSidebar()">
                        <i class="fas fa-arrow-left"></i>
                    </button>
                `);
            }
        });
    </script>
}