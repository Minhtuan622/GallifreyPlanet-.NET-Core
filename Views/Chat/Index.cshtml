@{
    ViewBag.Title = "Chat Manager";
}

<div class="chat-container">
    <div class="row g-0 h-100">
        <!-- Sidebar -->
        <div class="col-md-4 col-lg-3 chat-sidebar">
            <div class="sidebar-header">
                <h5 class="mb-3">Messages</h5>
                <div class="input-container">
                    <i class="fas fa-search text-muted"></i>
                    <input type="text" id="search-conversations" placeholder="Search conversations...">
                </div>
            </div>

            <!-- Conversation List -->
            <div class="conversation-list">
                <div class="conversation-item hover-bg" data-user-id="1">
                    <div class="position-relative">
                        <img src="/api/placeholder/40/40" class="rounded-circle" width="48" height="48" alt="User">
                        <span class="status-dot bg-success"></span>
                    </div>
                    <div class="conversation-content ms-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">John Doe</h6>
                            <small class="text-muted">2m ago</small>
                        </div>
                        <p class="text-muted small text-truncate mb-0">Thanks for the update!</p>
                    </div>
                </div>

                <div class="conversation-item hover-bg" data-user-id="2">
                    <div class="position-relative">
                        <img src="/api/placeholder/40/40" class="rounded-circle" width="48" height="48" alt="User">
                        <span class="status-dot bg-secondary"></span>
                    </div>
                    <div class="conversation-content ms-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Alice Smith</h6>
                            <small class="text-muted">1h ago</small>
                        </div>
                        <p class="text-muted small text-truncate mb-0">Let's meet tomorrow</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chat Main Area -->
        <div class="col-md-8 col-lg-9 chat-main">
            <!-- Chat Header -->
            <div class="chat-header">
                <div class="user-info">
                    <div class="position-relative">
                        <img src="/api/placeholder/40/40" class="rounded-circle" width="48" height="48" alt="User">
                        <span class="status-dot bg-success"></span>
                    </div>
                    <div>
                        <h6 class="mb-0">John Doe</h6>
                        <small class="text-success">Online</small>
                    </div>
                </div>
                <div class="header-actions">
                    <button class="btn rounded-circle" title="Voice Call">
                        <i class="fas fa-phone"></i>
                    </button>
                    <button class="btn rounded-circle" title="Video Call">
                        <i class="fas fa-video"></i>
                    </button>
                    <button class="btn rounded-circle" title="More Options">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
            </div>

            <!-- Messages Container -->
            <div class="messages-container">
                <div class="message message-received">
                    <div class="message-content">
                        Hi! How are you doing?
                    </div>
                    <span class="message-time">10:30 AM</span>
                </div>

                <div class="message message-sent">
                    <div class="message-content">
                        I'm doing great, thanks for asking! How about you?
                    </div>
                    <span class="message-time">10:32 AM</span>
                </div>
            </div>

            <!-- Chat Input -->
            <div class="chat-input">
                <div class="input-container">
                    <button class="btn" title="Attach File">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <input type="text" id="message-input" placeholder="Type your message...">
                    <button class="btn" title="Emoji">
                        <i class="fas fa-smile"></i>
                    </button>
                    <button class="btn btn-primary rounded-circle" id="send-message" title="Send Message">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/chat.css">
}

@section Scripts {
    <script src="~/js/chatv2.js"></script>
}